<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SalaDeEscape</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow">
            <img class="navbar-brand" src="/sources/logo.jpg" height="75">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarText">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link text-dark btn btn-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark btn btn-light" asp-area="" asp-controller="Home" asp-action="Tutorial">Tutorial</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark btn btn-light" asp-area="" asp-controller="Escape" asp-action="Index">Jugar</a>
                    </li>
                </ul>
                @if(Escape.EstadoJuego != 0 && Escape.Nombre != "Ingrese su nombre en la seccion jugar"){
                    <span class="navbar-text">
                        <div class="nav-link text-dark alert alert-info">@Escape.Nombre / <span id="timeClock">@Escape.Segundos</span> segundos </div>
                    </span>
                }
            </div>
        </nav>
    </header>

    <input type="hidden" value=@Escape.EstadoJuego id="estado">
 
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center">
        <div class="container">
            &copy; 2022 - Sala De Escape - Ignacio Gutman</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
